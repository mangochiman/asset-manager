<div class="row">
  <div class="col-md-12">
    <!-- Buttons with Icons -->
    <div class="card">
      <div class="card-body row">
        <div>
          <button onclick="downloadPeopleTemplate()" type="button" class="btn btn-primary">
            <i class="fa fa-file-csv"></i> Download People Template
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<form id="assetForm" action="/upload_people_from_file" method="post" enctype="multipart/form-data">
  <div class="form-group" id="fileInput">
    <label for="exampleInputFile">Upload People</label>
    <div class="input-group">
      <div class="custom-file">
        <input type="file" name="file" required class="custom-file-input">
        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Submit</button>
  </div>
</form>

<script>
    $(document).ready(function () {
        jQuery('.people').addClass('active');
        jQuery('.new_person_menu').addClass('active');
        jQuery('.people-menu').addClass('menu-open');

        bsCustomFileInput.init();
    })

    function downloadPeopleTemplate(){
        window.location = "/download_people_template"
    }
</script>