<div class="modal fade" id="checkoutAssetModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/checkout_asset_stock" method="post">
        <div class="modal-header">
          <h4 class="modal-title">Checkout Asset</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
