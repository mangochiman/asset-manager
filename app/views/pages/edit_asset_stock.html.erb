<script>

    $(document).ready(function () {
        // Summernote
        jQuery('#summernote').summernote()

        jQuery('.asset_stock').addClass('active');
        jQuery('.list_asset_stock_menu').addClass('active');
        jQuery('.assets-stock-menu').addClass('menu-open');

        jQuery("#assetForm").submit(function (event) {
            var assetName = jQuery("#assetName").val().trim()
            if (assetName == "") {
                jQuery('#requiredModal').modal('show');
                event.preventDefault();
            }
        });

        bsCustomFileInput.init();
    })

    function validateForm() {
        $("#assetForm").submit();
    }

    function startServiceLogic(obj) {
        var objID = jQuery(obj).attr("id")
        if (objID == "serviceUnavailable") {
            jQuery(".service-asset-start").hide()
            jQuery(".service-asset-end").hide()
            jQuery(".service-asset-completion").show()
        }
        if (objID == "serviceLog") {
            jQuery(".service-asset-start").show()
            jQuery(".service-asset-end").show()
            jQuery(".service-asset-completion").hide()
        }
    }

    function updateServicePerformer(obj) {
        var objVal = jQuery(obj).val()
        if (objVal == "Vendor") {
            jQuery(".service-asset-vendor").show()
            jQuery(".service-asset-member").hide()
        }
        if (objVal == "Member") {
            jQuery(".service-asset-vendor").hide()
            jQuery(".service-asset-member").show()
        }
    }

    function updateServiceSchedulePerformer(obj) {
        var objVal = jQuery(obj).val()
        if (objVal == "Vendor") {
            jQuery(".service-schedule-vendor").show()
            jQuery(".service-schedule-member").hide()
        }
        if (objVal == "Member") {
            jQuery(".service-schedule-vendor").hide()
            jQuery(".service-schedule-member").show()
        }
    }

    function updateStartServiceSchedulePerformer(obj) {
        var objVal = jQuery(obj).val()
        if (objVal == "Vendor") {
            jQuery(".start-schedule-vendor").show()
            jQuery(".start-schedule-member").hide()
        }
        if (objVal == "Member") {
            jQuery(".start-schedule-vendor").hide()
            jQuery(".start-schedule-member").show()
        }
    }


    var asset_type_id = '<%= @asset_stock.asset_type_id %>';
    var location_id = '<%= @asset_stock.location_id %>';
    var condition_selection_field_id = '<%= @asset_stock.condition_id %>';
    var vendor_id = '<%= @asset_stock.vendor_id %>';
    var asset_stock_id = '<%= @asset_stock.asset_stock_id %>';
    var project_id = '<%= @asset_stock.project_id %>';

    var selectedAssetAttachmentID;

