                      <% end %>
                    </select>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-4">
                  <div class="form-group">
                    <label>Manufacturer</label>
                    <input type="text" value="<%= @asset_stock.manufacturer %>" name="manufacturer" class="form-control">
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="form-group">
                    <label>Brand</label>
                    <input type="text" value="<%= @asset_stock.brand %>" name="brand" class="form-control">
