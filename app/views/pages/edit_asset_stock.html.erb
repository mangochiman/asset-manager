<style>
    ul.timeline {
        list-style-type: none;
        position: relative;
    }

    ul.timeline:before {
        content: ' ';
        background: #d4d9df;
        display: inline-block;
        position: absolute;
        left: 29px;
        width: 2px;
        height: 100%;
        z-index: 400;
    }

    ul.timeline > li {
        margin: 20px 0;
        padding-left: 50px;
    }

    ul.timeline > li:before {
        content: ' ';
        background: white;
        display: inline-block;
        position: absolute;
        border-radius: 50%;
        border: 3px solid #22c0e8;
        left: 20px;
        width: 20px;
        height: 20px;
        z-index: 400;
    }
</style>

<form id="assetForm" action="/edit_asset_stock" method="post" enctype="multipart/form-data">
  <div class="card card-primary card-outline">

    <div class="card-body">

      <div class="row">
        <div class="col-md-12">
          <!-- Buttons with Icons -->
          <div class="card">
            <div class="card-body row">
              <div>
                <button onclick="validateForm()" type="button" class="btn btn-success">
                  <i class="fa fa-save"></i> Save
                </button>
                <button onclick="cloneAsset()" type="button" class="btn btn-secondary">
                  <i class="fa fa-copy"></i> Clone
                </button>
                <button type="button" onclick="voidAssetConfirm('<%= @asset_stock.asset_stock_id %>')" class="btn btn-danger">
                  <i class="fa fa-trash"></i> Delete
                </button>
                <% if !@retired %>
                  <button type="button" onclick="retireAssetConfirm('<%= @asset_stock.asset_stock_id %>')" class="btn btn-warning">
                    <i class="fa fa-archive"></i> Retire
                  </button>
                <% end %>
              </div>

              <div style="padding-left: 5em;">
                <div class="btn-group" style="padding-right: 1em;">
                  <button type="button" class="btn btn-default">More</button>
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <div class="dropdown-menu" role="menu">
                    <a class="dropdown-item" href="#" onclick="showAddStockModal()">Add Stock</a>
                    <% if @asset_stock.checked_out_quantity > 0 %>
                      <a class="dropdown-item" disabled href="#" onclick="showCheckinMenuModal()">Checkin</a>
                    <% else %>
                      <a class="dropdown-item" disabled href="#" style="color: gray">Checkin</a>
                    <% end %>
                    <a class="dropdown-item" href="#" onclick="showStockMovementModal()">Stock History</a>
                    <a class="dropdown-item" href="#" onclick="printLabel()">Print Labels</a>
                  </div>
                </div>


                <% if !@retired %>
                  <% if @checked_out && !@retired %>
                    <button type="button" onclick="showCheckinAssetModal()" class="btn btn-primary">
                      <i class="fa fa-arrow-circle-right"></i> Checkin
                    </button>
                  <% end %>

                  <% if @asset_stock.checked_out_quantity > 0 %>
                    <button type="button" onclick="showCheckinMenuModal()" class="btn btn-primary">
                      <i class="fa fa-arrow-circle-right"></i> Checkin
                    </button>
                  <% else %>
                    <button type="button" disabled class="btn btn-default">
                      <i class="fa fa-arrow-circle-right"></i> Checkin
                    </button>
                  <% end %>

                  <% if @asset_stock.total_quantity > 0 %>
                  <button type="button" onclick="showCheckoutAssetModal()" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-right"></i> Checkout
                  </button>
                  <% else %>
                    <button type="button" disabled class="btn btn-default">
                      <i class="fa fa-arrow-circle-right"></i> Checkout
                    </button>
                  <% end %>
                <% end %>

                <% if @retired %>
                  <button onclick="activateAsset()" type="button" class="btn btn-primary">
                    <i class="fa fa-unlock"></i> ACTIVATE
                  </button>
                <% end %>

                <% if @retired %>
                  <button type="button" class="btn btn-primary" onclick="printLabel()">
                    <i class="fa fa-print"></i> PRINT LABEL
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <p>Available Quantity: <span class="badge bg-info"><%= @asset_stock.total_quantity %></span> | Checked out quantity: <span class="badge bg-info"><%= @asset_stock.checked_out_quantity %></p>

