            <label>Expected Completion </label>
            <input type="date" name="expected_completion" required class="form-control">
          </div>
          <div class="form-check">
            <input id="extend_service_indefinite" class="form-check-input" type="checkbox" name="service_indefinite">
            <label for="extend_service_indefinite" class="form-check-label">Under service indefinitely</label>
