          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">RETIRE</button>
        </div>
      </form>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="serviceStartModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/service_asset" method="post">
        <div class="modal-header">
          <h4 class="modal-title">Service Asset</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" style="overflow: auto; max-height: calc(70vh - 90px);">
          <div class="form-check">
            <input class="form-check-input" value="maintenance" onchange="startServiceLogic(this)" id="serviceUnavailable" type="radio" name="availability" checked>
            <label for="serviceUnavailable" class="form-check-label"> Make Item unavailable (Item will be put in maintenance state)</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" value="available" onchange="startServiceLogic(this)" id="serviceLog" type="radio" name="availability">
            <label for="serviceLog" class="form-check-label">Create a service record. Do not make item unavailable</label>
          </div>
          <hr/>
          <div class="form-group service-asset-completion">
            <label>Expected Completion </label>
            <input type="date" name="completion_date" class="form-control">
            <div class="form-check">
              <input id="service_indefinite" class="form-check-input" type="checkbox" name="service_indefinite">
              <label for="service_indefinite" class="form-check-label">Under service indefinitely</label>
            </div>
          </div>
          <div class="form-group service-asset-start" style="display: none">
            <label>From </label>
            <input type="date" name="from" class="form-control">
          </div>
          <div class="form-group service-asset-end" style="display: none">
            <label>To </label>
            <input type="date" name="to" class="form-control">
          </div>
          <div class="form-group">
            <label>Service Type</label>
            <select name="selection_field_id" id="inputServiceType" class="form-control custom-select">
              <% @service_types.each do |service_type| %>
                <option value="<%= service_type.selection_field_id %>"><%= service_type.field_name %></option>
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <label>Service Performed By</label>
            <select onchange="updateServicePerformer(this)" name="service_performer" class="form-control custom-select">
              <option value="" selected disabled>Select one</option>
              <option>Vendor</option>
              <option>Member</option>
            </select>
          </div>

          <div class="form-group service-asset-vendor" style="display: none;">
            <label>Vendor</label>
            <select name="vendor_id" class="form-control custom-select">
              <option value="" selected disabled>Select one</option>
              <% @vendors.each do |vendor| %>
                <option value="<%= vendor.vendor_id %>"><%= vendor.name %></option>
              <% end %>
            </select>
          </div>

          <div class="form-group service-asset-member" style="display: none;">
            <label>Member</label>
            <select name="person_id" class="form-control custom-select">
              <option value="" selected disabled>Select one</option>
              <% @people.each do |person| %>
                <% display_name = person.first_name.to_s + " " + person.last_name.to_s + "(" + person.email.to_s + ")" %>
                <option value="<%= person.person_id %>"><%= display_name %></option>
              <% end %>
            </select>
          </div>

          <div class="form-group">
            <label>Comments</label>
            <textarea name="comments" class="form-control"></textarea>
          </div>

        </div>
        <input type="hidden" value="<%= params[:asset_id] %>" name="asset_id"/>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">CREATE SERVICE</button>
        </div>
      </form>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>

