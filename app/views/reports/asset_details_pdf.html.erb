<style>
    #companyLogo {
        border: 2px solid gray;
        float: right;
        right: 20px;
        margin-top: -120px;
        position: absolute !important;
    }
</style>
<hr />
<div class="container-fluid">
  <dl class="row">
    <dt class="col-sm-4">Company Name</dt>
    <dd class="col-sm-8"><%= @header || "N/A"%></dd>
    <dt class="col-sm-4">Report Type</dt>
    <dd class="col-sm-8"><%= @page_header %></dd>
  </dl>
  <% unless @logo_url.blank? %>
    <div class="image">
      <img id="companyLogo" height="80px" src="<%= @logo_url %>" class="elevation-2" alt="User Image">
    </div>
  <% end %>
  <div class="row">
    <div class="col-12">
      <div class="card">

        <div class="card-body">
          <table id="example1" class="table-striped table-condensed" style="width: 100%">
            <thead>
            <tr style="width: 100% !important;">
              <th>&nbsp;</th>
              <th>&nbsp;</th>
              <th>&nbsp;</th>
              <th>&nbsp;</th>
            </thead>
            <tbody>
            <% @assets.each do |asset| %>
              <tr style="background-color: lightblue">
                <td>Description</td>
                <td><%= asset.name %></td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
              </tr>
              <tr style="background-color: white">
                <td>Asset Number</td>
                <td><%= asset.barcode %></td>
                <td>Serial Number</td>
                <td><%= asset.serial_number %></td>
              </tr>
              <tr style="background-color: white">
                <td>Project</td>
                <td><%= asset.project_details %></td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
              </tr>
              <tr style="background-color: white">
                <td>Asset Type</td>
                <td><%= asset.asset_type_details %></td>
                <td>State</td>
                <td><%= asset.state %></td>
              </tr>
              <tr style="background-color: white">
                <td>Location</td>
                <td><%= asset.location_details %></td>
                <td>Condition</td>
                <td><%= asset.condition_details %></td>
              </tr>
              <tr style="background-color: white">
                <td>Manufacturer</td>
                <td><%= asset.manufacturer %></td>
                <td>Brand</td>
                <td><%= asset.brand %></td>
              </tr>
              <tr style="background-color: white">
                <td>Model</td>
                <td><%= asset.model %></td>
                <td>Warranty Expiry Date</td>
                <td><%= asset.warranty_end %></td>
              </tr>
              <tr style="background-color: white">
                <td>Account Code</td>
                <td><%= asset.account_code %></td>
                <td>Purchase Date</td>
                <td><%= asset.date_purchased %></td>
              </tr>
              <tr style="background-color: white">
                <td>PO NUmber</td>
                <td><%= asset.order_number %></td>
                <td>Vendor</td>
                <td><%= asset.vendor_details %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
    <!-- /.col -->
  </div>
  <%= @footer %> | Generated on <%= Time.now %>
  <!-- /.row -->
</div>
<!-- /.container-fluid -->