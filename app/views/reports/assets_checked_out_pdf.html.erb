<style>
    #companyLogo {
        border: 2px solid gray;
        float: right;
        right: 20px;
        margin-top: -120px;
        position: absolute !important;
    }
</style>
<hr />
<div class="container-fluid">
  <dl class="row">
    <dt class="col-sm-4">Company Name</dt>
    <dd class="col-sm-8"><%= @header || "N/A"%></dd>
    <dt class="col-sm-4">Report Type</dt>
    <dd class="col-sm-8"><%= @page_header %></dd>
  </dl>
  <% unless @logo_url.blank? %>
    <div class="image">
      <img id="companyLogo" height="80px" src="<%= @logo_url %>" class="elevation-2" alt="User Image">
    </div>
  <% end %>
  <div class="row">
    <div class="col-12">
      <div class="card">

        <div class="card-body">
          <table id="example1" class="table-striped table-condensed" style="width: 100%;">
            <thead>
            <tr>
              <th>Asset Name</th>
              <th>Asset Number</th>
              <th>Location</th>
              <th>Status</th>
              <th>Brand</th>
              <th>Model</th>
              <th>Checked out Date</th>
              <th>Return On</th>
            </tr>
            </thead>
            <tbody>
            <% @assets.each do |asset| %>
              <tr>
                <td><%= asset.name %></td>
                <td><%= asset.barcode %></td>
                <td><%= asset.location_details %></td>
                <td><%= asset.state %></td>
                <td><%= asset.brand %></td>
                <td><%= asset.model %></td>
                <td><%= asset.checked_out_date.strftime("%d.%m.%Y") %></td>
                <td><%= asset.return_on_date.strftime("%d.%m.%Y") %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
    <!-- /.col -->
  </div>
  <%= @footer %> | Generated on <%= Time.now %>
  <!-- /.row -->
</div>
<!-- /.container-fluid -->