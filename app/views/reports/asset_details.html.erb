<section class="content">
  <div class="row">
    <div class="col-md-12">
      <!-- Buttons with Icons -->
      <div class="card">
        <div class="card-body row">
          <div>
            <button onclick="downloadAssetDetailsPDF()" type="button" class="btn btn-primary">
              <i class="fa fa-file-pdf"></i> Download PDF
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">

          <div class="card-body">
            <table id="example1" class="table-striped table-condensed" style="width: 100%">
              <thead style="display: none;">
              <tr style="width: 100% !important;">
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
              </tr>
              </thead>
              <tbody>
              <% @assets.each do |asset| %>
                <tr style="background-color: lightblue">
                  <td>Description</td>
                  <td><%= asset.name %></td>
                  <td>&nbsp;</td>
                  <td>&nbsp;</td>
                </tr>
                <tr style="background-color: white">
                  <td>Asset Number</td>
                  <td><%= asset.barcode %></td>
                  <td>Serial Number</td>
                  <td><%= asset.serial_number %></td>
                </tr>
                <tr style="background-color: white">
                  <td>Project</td>
                  <td><%= asset.project_details %></td>
                  <td>&nbsp;</td>
                  <td>&nbsp;</td>
                </tr>
                <tr style="background-color: white">
                  <td>Asset Type</td>
                  <td><%= asset.asset_type_details %></td>
                  <td>State</td>
                  <td><%= asset.state %></td>
                </tr>
                <tr style="background-color: white">
                  <td>Location</td>
                  <td><%= asset.location_details %></td>
                  <td>Condition</td>
                  <td><%= asset.condition_details %></td>
                </tr>
                <tr style="background-color: white">
                  <td>Manufacturer</td>
                  <td><%= asset.manufacturer %></td>
                  <td>Brand</td>
                  <td><%= asset.brand %></td>
                </tr>
                <tr style="background-color: white">
                  <td>Model</td>
                  <td><%= asset.model %></td>
                  <td>Warranty Expiry Date</td>
                  <td><%= asset.warranty_end %></td>
                </tr>
                <tr style="background-color: white">
                  <td>Account Code</td>
                  <td><%= asset.account_code %></td>
                  <td>Purchase Date</td>
                  <td><%= asset.date_purchased %></td>
                </tr>
                <tr style="background-color: white">
                  <td>PO NUmber</td>
                  <td><%= asset.order_number %></td>
                  <td>Vendor</td>
                  <td><%= asset.vendor_details %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>

<script type="text/javascript">
    $(document).ready(function () {
        jQuery('.asset-details').addClass('active');
        jQuery('.asset-reports-menu').addClass('active');
        jQuery('.reports-menu').addClass('menu-open');

        $("#example1").DataTable({
            "responsive": true,
            "ordering": false,
            "lengthChange": false,
            "autoWidth": false,
            "bPaginate": false,
            "bFilter": false,
            "bInfo": false
        })

        jQuery(".dt-buttons").removeClass("btn-group")
        jQuery(".dt-buttons > .btn-secondary").removeClass("btn-secondary").addClass("btn-primary")
    })

    function downloadAssetDetailsPDF(){
        window.location = "/download_asset_details_pdf"
    }
</script>